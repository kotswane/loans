<script>


    var acc = document.getElementsByClassName("accordion");
    var arrows = document.getElementsByClassName("downarrow");
    var i;

    $(document).ready(function () {
        //var x = document.getElementsByClassName("panel");
        //var i;
        //for (i = 0; i < x.length; i++) {
        //    panel.style.borderBottom = "none";
        //}
    });

    for (i = 0; i < acc.length; i++) {
        acc[i].addEventListener("click", function () {

            this.classList.toggle("active");
            var panel = this.nextElementSibling;
            var img = panel.nextElementSibling;

            if (panel.style.maxHeight) {
                panel.style.maxHeight = null;
                panel.style.marginTop = "-2px";
                img.src="../Content/Images/downarrow.png"
            } else {
                panel.style.maxHeight = panel.scrollHeight + "px";
                panel.style.marginTop = "-2px";
                img.src = "../Content/Images/uparrow.png";
            }
        });
    }


    for (j = 0; j < arrows.length; j++) {
        arrows[j].addEventListener("click", function () {

            var img = this;
            var panel = this.previousElementSibling;
            var accordion = panel.previousElementSibling;
            accordion.classList.toggle("active");

            if (panel.style.maxHeight) {
                panel.style.maxHeight = null;
                panel.style.marginTop = "-2px";
                img.src = "../Content/Images/downarrow.png"
            } else {
                panel.style.maxHeight = panel.scrollHeight + "px";
                panel.style.marginTop = "-2px";
                img.src = "../Content/Images/uparrow.png";
            }
        });
    }

</script>

