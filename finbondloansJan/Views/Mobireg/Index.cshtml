<div class="clsPageBannerHeader">
    <div class="clsCenterBlock clsPageBannerHeaderPad">
        <div class="clsPageBannerHeaderTitle">REGISTER</div>
        <div class="clsPageBannerHeaderSubTitle">You'll need to create an account to continue. If you have been here before, please <a href="~/login/index" style="color:#008fd5" class="clsWhiteBackLinks">log in</a> </div>
    </div>
</div>
<div class="clsCenterBlock clsMobi">
    <div class="clsCenterBlockPad">

        <div style="width:100%;margin:0 auto">
            <div style="background-color:#fff; border-radius:10px;">
                <div style="padding:20px;width:320px;margin:0 auto;">
                    @using (Html.BeginForm("RegisterStep1", "Mobireg", FormMethod.Post, new { @onsubmit = "return ValidateRegister();" }))
            {
                        @Html.AntiForgeryToken()
                        <div class="">
                            <div class="clsRegisterLabel">Title:</div>
                            <div>
                                @Html.DropDownListFor(m => m.Title,
                       new SelectList(Model.TitleList, "TitleId", "TitleDesc", Model.Title), new { @id = "ddlTitle", @class = "clsDropDownList" })
                            </div>
                            <div class="clsMandatory" style="float: left">@Html.ValidationMessageFor(m => m.Title)</div>
                        </div>
                        <br/>
                        <div class="">
                            <div class="clsRegisterLabel">First Name:</div>
                            <div>@Html.TextBoxFor(m => m.FirstName, new { maxlength = 50, autocomplete = "off" })</div>
                            <div class="clsMandatory" style="float: left">@Html.ValidationMessageFor(m => m.FirstName)</div>
                        </div>

                      
                        <div style="clear:both"></div>
                        <br />
                        <div class="">
                            <div class="clsRegisterLabel">Last Name:</div>
                            <div>@Html.TextBoxFor(m => m.LastName, new { maxlength = 50, autocomplete = "off" })</div>
                            <div class="clsMandatory" style="float: left">@Html.ValidationMessageFor(m => m.LastName)</div>
                        </div>
                        <div style="clear:both"></div>
                        <br />
                        <div class="">
                            <div class="clsRegisterLabel">ID Number:</div>
                            <div>@Html.TextBoxFor(m => m.IDNumber, new { maxlength = 13, onkeypress = "return isNumberKey(event,this);", id = "txtIDNumber", autocomplete = "off", onchange = "javascript:fnPopulateDateOfBirth();" })</div>
                            <div class="clsMandatory" style="float: left">@Html.ValidationMessageFor(m => m.IDNumber)</div>
                        </div>
                        <div style="clear:both"></div>
                        <br />

                       

                        <div class="">
                            <div class="clsRegisterLabel">Email Address:</div>
                            <div>@Html.TextBoxFor(m => m.EmailAddress, new { maxlength = 50, autocomplete = "off" })</div>
                            <div class="clsMandatory" style="float: left">@Html.ValidationMessageFor(m => m.EmailAddress)</div>
                        </div>
                        <div style="clear:both"></div>
                        <br />
                        <div class="">
                            <div class="clsRegisterLabel">Mobile Number:</div>
                            <div>@Html.TextBoxFor(m => m.MobileNumber, new { maxlength = 10, onkeypress = "return isNumberKey(event,this);", autocomplete = "off" })</div>
                            <div class="clsMandatory" style="float: left">@Html.ValidationMessageFor(m => m.MobileNumber)</div>
                        </div>

                   
                        <div style="clear:both"></div>
                        <br />
                 

                        <div class="">
                            <div class="clsRegisterLabel">Country Of Birth:</div>
                            <div>
                                @Html.DropDownListFor(m => m.CountryOfBirth,
                                   new SelectList(Model.CountryOfBirthList, "COBId", "COBDesc", Model.CountryOfBirth), new { @id = "ddlCountryOfBirth", @class = "clsDropDownList" })
                            </div>
                            <div class="clsMandatory" style="float: left">@Html.ValidationMessageFor(m => m.CountryOfBirth)</div>
                        </div>
                        <div style="clear:both"></div>
                        <br />
             
                       
                        <div class="">
                            <div class="clsRegisterLabel">Loan Amount:</div>
                            <div>@Html.TextBoxFor(m => m.LoanAmount, new { maxlength = 10, onkeypress = "return isNumberKey(event,this);", autocomplete = "off", placeholder = "Up to the Maximum value of 20K" })</div>
                            <div class="clsMandatory" style="float: left">@Html.ValidationMessageFor(m => m.LoanAmount)</div>
                        </div>
                        <div style="clear:both"></div>
                        <br />

                        <div class="">
                            <div class="clsRegisterLabel" >Employment Type:</div>
                            <div>
                                @Html.DropDownListFor(m => m.EmploymentTypeId,
                                   new SelectList(Model.EmploymentTypeList, "EmploymentTypeId", "EmploymentTypeDesc", Model.EmploymentTypeId), new { @id = "ddlEmploymentType", @class = "clsDropDownList" })
                            </div>
                            <div class="clsMandatory" style="float: left">@Html.ValidationMessageFor(m => m.EmploymentTypeId)</div>
                        </div>
                        <div style="clear:both"></div>
                        <br />
                        <div class="">
                            <div class="clsRegisterLabel">Password:</div>
                            <div style="width:300px;float:left">
                                @Html.TextBoxFor(m => m.Password, new { @id = "txtPassword", type = "password", autocomplete = "new-password", maxlength = "20" })
                                <div class="clsMandatory" style="float: left">@Html.ValidationMessageFor(m => m.Password)</div>
                            </div>
                            <div style="clear:both"></div>
                        </div>
                        <div style="clear:both"></div>
                        <br />
                        <br />
                      
                  
                    

                        <div>
                            <input type="checkbox" id="chkCreditCheck" class="input_class_checkbox" style="margin-top:0px" />
                            <div>
                                You hereby provide us permission to perform a credit check for the purposes of granting this loan
                            </div>
                        </div>

                        <div style="display:none" id="divCreditCheck" class="clsMandatory">Please accept the credit check</div>
                        <br />
                        <div style="color: red; font-size: 12px">Please ensure that your cellphone number and email are correct as they are used during the verification process. You will not be able to edit them after this step.</div>

                        <br />
                       
           
                        <div style="text-align:center;">
                            <input class="btn" type="submit" value="Register" name="Register" id="BtnRegister"  />
                            <div style="clear:both;font-size:11px;">
                                By clicking the button above you accept the
                                <div class="clsWhiteBackLinks" style="margin-left:-10px;float:right;cursor:hand;cursor:pointer;" data-toggle="modal" data-target="#divRegisterTermsOfUse">
                                    T's &amp; C's
                                </div>
                            </div>
                        </div>
                        <div style="clear:both"></div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

