
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@using CaptchaMvc.HtmlHelpers
@model  StaffLoans.Models.PersonalInformation
<script src="~/scripts/jquery.password-strength.js"></script>
<script src="~/scripts/Register.js?v=3"></script>
